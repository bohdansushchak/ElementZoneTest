<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextBlack"
            android:lines="1"
            tools:text="Biedronka"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvOrderTitle"/>

    <TextView
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextBlack"
            tools:text="12.03.2019"
            android:id="@+id/tvOrderDate"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/tvOrderTitle"
            app:layout_constraintStart_toStartOf="@+id/tvOrderTitle"
            app:layout_constraintEnd_toEndOf="@+id/tvOrderTitle"/>
    <View
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/tvOrderDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>